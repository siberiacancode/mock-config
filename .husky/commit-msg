emoji=$(git config user.emoji || echo "ðŸŽ‰")
branch=$(git symbolic-ref --short HEAD || git rev-parse --short HEAD)
message=$(cat "$1")

if echo "$message" | (! grep -qF "${branch} ${emoji}") &&\
   echo "$message" | (! grep -qF "Merge branch") &&\
   echo "$message" | (! grep -qF "Merge remote-tracking branch");\
then
   echo "$branch $emoji $(cat "$1")" > "$1"
fi